<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="system" method="upgrade">
    <name>JTFramework</name>
    <author>Vu Mai</author>
    <creationDate>March 28th, 2016</creationDate>
    <copyright>Copyright (c) 2016 JoomTech. All rights reserved.</copyright>
    <authorEmail>contact@joomtech.net</authorEmail>
    <authorUrl>www.joomtech.net</authorUrl>
    <version>1.0.0</version>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <description>JUikit - A custom prefix from UIKIT</description>
    <scriptfile>install.script.php</scriptfile>
    <install>
        <sql>
            <file driver="mysqli" charset="utf8">sql/mysql/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysqli" charset="utf8">sql/mysql/uninstall.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
        </schemas>
    </update>
    <files>
        <filename plugin="jtframework">jtframework.php</filename>
        <folder>helpers</folder>
        <folder>layouts</folder>
        <folder>media</folder>
        <folder>sql</folder>
    </files>
    <media folder="media" destination="jtui">
        <folder>css</folder>
        <folder>js</folder>
        <folder>fonts</folder>
    </media>
</extension>
