<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
                name="id"
                type="hidden"
                default="0"
        />
        <field
                name="state"
                type="radio"
                label="COM_EASYSEF_PUBLISHED_LABEL"
                description="COM_EASYSEF_PUBLISHED_DESC"
                default="1"
                class="btn-group btn-group-yesno"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="origin"
                type="text"
                label="COM_EASYSEF_ORIGIN_LABEL"
                description="COM_EASYSEF_ORIGIN_DESC"
                class="jt-form-width-large"
        />
        <field
                name="sef"
                type="text"
                label="COM_EASYSEF_SEF_LABEL"
                description="COM_EASYSEF_SEF_DESC"
                class="jt-form-width-large"
        />
        <field
                name="meta_title"
                type="text"
                label="COM_EASYSEF_META_TITLE_LABEL"
                description="COM_EASYSEF_META_TITLE_DESC"
                class="jt-form-width-large"
        />
        <field
                name="meta_key"
                type="textarea"
                label="COM_EASYSEF_META_KEY_LABEL"
                description="COM_EASYSEF_META_KEY_DESC"
                class="jt-form-width-large"
                cols="25"
                rows="5"
        />
        <field
                name="meta_desc"
                type="textarea"
                label="COM_EASYSEF_META_DESC_LABEL"
                description="COM_EASYSEF_META_DESC_DESC"
                class="jt-form-width-large"
                cols="25"
                rows="5"
        />
        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"/>
    </fieldset>
    <fields
            name="metadata"
            label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
        <fieldset
                name="metadata"
                label="JGLOBAL_FIELDSET_METADATA_OPTIONS"
        >
            <field name="robots"
                   type="list"
                   label="JFIELD_METADATA_ROBOTS_LABEL"
                   description="JFIELD_METADATA_ROBOTS_DESC"
            >
                <option value="">JGLOBAL_USE_GLOBAL</option>
                <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
                <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
                <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
                <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
            </field>
            <field
                    name="author"
                    type="text"
                    label="JAUTHOR"
                    description="JFIELD_METADATA_AUTHOR_DESC"
                    size="20"/>
            <field
                    name="rights"
                    type="textarea"
                    label="JFIELD_META_RIGHTS_LABEL"
                    description="JFIELD_META_RIGHTS_DESC"
                    required="false"
                    filter="string"
                    cols="30"
                    rows="2"/>
        </fieldset>
        <fieldset
                name="openGraph"
                label="COM_EASYSEF_OPEN_GRAPH_LABEL"
        >
            <field
                    name="og:title"
                    type="text"
                    label="COM_EASYSEF_OPEN_GRAPH_TITLE_LABEL"
                    description="COM_EASYSEF_OPEN_GRAPH_TITLE_DESC"
                    class="jt-form-width-large"
            />
            <field
                    name="og:type"
                    type="text"
                    label="COM_EASYSEF_OPEN_GRAPH_TYPE_LABEL"
                    description="COM_EASYSEF_OPEN_GRAPH_TYPE_DESC"
                    class="jt-form-width-large"
            />
            <field
                    name="og:image"
                    type="media"
                    label="COM_EASYSEF_OPEN_GRAPH_IMAGE_LABEL"
                    description="COM_EASYSEF_OPEN_GRAPH_IMAGE_DESC"
            />
            <field
                    name="og:description"
                    type="textarea"
                    label="COM_EASYSEF_OPEN_GRAPH_DESCRIPTION_LABEL"
                    description="COM_EASYSEF_OPEN_GRAPH_DESCRIPTION_DESC"
                    cols="25"
                    rows="5"
                    class="jt-form-width-large"
            />
        </fieldset>
    </fields>
</form>
