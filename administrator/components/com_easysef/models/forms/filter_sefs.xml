<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_EASYSEF_FILTER_SEARCH_LABEL"
                description="COM_EASYSEF_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
        <field
                name="state"
                type="list"
                label="COM_EASYSEF_PUBLISHED_LABEL"
                description="COM_EASYSEF_PUBLISHED_DESC"
                onchange="this.form.submit();"
                >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="language"
                type="contentlanguage"
                label="JOPTION_FILTER_LANGUAGE"
                description="JOPTION_FILTER_LANGUAGE_DESC"
                onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_LANGUAGE</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_EASYSEF_LIST_LIMIT"
                description="COM_EASYSEF_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>
